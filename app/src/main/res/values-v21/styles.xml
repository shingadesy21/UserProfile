<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="registration_edt" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/reg_edt_color</item>
        <item name="android:backgroundTint">@color/reg_edt_color</item>
    </style>

    <style name="reg_radio_btn" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:buttonTint">@color/reg_edt_color</item>
